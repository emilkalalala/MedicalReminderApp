@model MEDICAL_APP.Models.Medical



<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello</title>

</head>
<body>

    @using (Html.BeginForm("Add", "Home", FormMethod.Post))
    {

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

        <h2 class="display-4">WELCOME @HttpContext.Current.User.Identity.Name</h2>

        <div class="container">

            <div class="row">
                <h4>
                    @Html.LabelFor(model => model.MedicalName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.MedicalName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MedicalName, "", new { @class = "text-danger" })
                    </div>
                </h4>

            </div>





            <div class="row">
                <div class="col">
                    <div class="col">
                        <h4>Monday</h4>
                    </div>
                </div>
                <div class="col">
                    <h4>Tuesday</h4>
                </div>
                <div class="col">
                    <h4>Wednesday</h4>
                </div>
                <div class="col">
                    <h4>Thuersday</h4>
                </div>
                <div class="col">
                    <h4>Friday</h4>
                </div>
                <div class="col">
                    <h4>Saturday</h4>
                </div>
                <div class="col">
                    <h4>Sunday</h4>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="sampleDropdownMenuP" data-toggle="dropdown">
                            Choose Hours
                        </button>
                        <div class="dropdown-menu">
                            <button class="dropdown-item" type="button">
                                @for (int i = 0; i < Model.Monday.Count; i++)
                                {

                                    @Html.CheckBoxFor(model => Model.Monday[i].IsSelected);
                                    @Html.HiddenFor(model => Model.Monday[i].Hour);
                                    @Html.LabelFor(model => Model.Monday[i].IsSelected, Model.Monday[i].Hour);
                                }

                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="sampleDropdownMenuW" data-toggle="dropdown">
                            Choose Hours
                        </button>
                        <div class="dropdown-menu">
                            @for (int i = 0; i < Model.Monday.Count; i++)
                            {

                                @Html.CheckBoxFor(model => Model.Tuesday[i].IsSelected);
                                @Html.HiddenFor(model => Model.Tuesday[i].Hour);
                                @Html.LabelFor(model => Model.Tuesday[i].IsSelected, Model.Tuesday[i].Hour);
                            }
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="sampleDropdownMenuS" data-toggle="dropdown">
                            Choose Hours
                        </button>
                        <div class="dropdown-menu">
                            @for (int i = 0; i < Model.Wednesday.Count; i++)
                            {

                                @Html.CheckBoxFor(model => Model.Wednesday[i].IsSelected);
                                @Html.HiddenFor(model => Model.Wednesday[i].Hour);
                                @Html.LabelFor(model => Model.Wednesday[i].IsSelected, Model.Wednesday[i].Hour);
                            }
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="sampleDropdownMenuC" data-toggle="dropdown">
                            Choose Hours
                        </button>
                        <div class="dropdown-menu">
                            @for (int i = 0; i < Model.Tuesday.Count; i++)
                            {

                                @Html.CheckBoxFor(model => Model.Tuesday[i].IsSelected);
                                @Html.HiddenFor(model => Model.Tuesday[i].Hour);
                                @Html.LabelFor(model => Model.Tuesday[i].IsSelected, Model.Tuesday[i].Hour);
                            }
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="sampleDropdownMenuF" data-toggle="dropdown">
                            Choose Hours
                        </button>
                        <div class="dropdown-menu">
                            @for (int i = 0; i < Model.Friday.Count; i++)
                            {

                                @Html.CheckBoxFor(model => Model.Friday[i].IsSelected);
                                @Html.HiddenFor(model => Model.Friday[i].Hour);
                                @Html.LabelFor(model => Model.Friday[i].IsSelected, Model.Friday[i].Hour);
                            }
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="sampleDropdownMenuSo" data-toggle="dropdown">
                            Choose Hours
                        </button>
                        <div class="dropdown-menu">
                            @for (int i = 0; i < Model.Saturday.Count; i++)
                            {

                                @Html.CheckBoxFor(model => Model.Saturday[i].IsSelected);
                                @Html.HiddenFor(model => Model.Saturday[i].Hour);
                                @Html.LabelFor(model => Model.Saturday[i].IsSelected, Model.Saturday[i].Hour);
                            }
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="sampleDropdownMenuN" data-toggle="dropdown">
                            Choose Hours
                        </button>
                        <div class="dropdown-menu">
                            @for (int i = 0; i < Model.Sunday.Count; i++)
                            {

                                @Html.CheckBoxFor(model => Model.Sunday[i].IsSelected);
                                @Html.HiddenFor(model => Model.Sunday[i].Hour);
                                @Html.LabelFor(model => Model.Sunday[i].IsSelected, Model.Sunday[i].Hour);
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div>

            <p style="line-height: 10 ">


        </div>

        <div class="col-sm-10">
            <button type="submit" ; class="btn btn-primary"><h4>Add</h4></button>
        </div>
        <div>

            <p style="line-height: 10 ">


        </div>
    }
     @if (Request.IsAuthenticated)
     {
        using (Html.BeginForm("Index", "Profil", FormMethod.Get, new { id = "profil" }))
        {
            <a href="javascript:document.getElementById('profil').submit()"><h4>Profil</h4></a>
        }
     }
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
        {
            <a href="javascript:document.getElementById('logoutForm').submit()"><h4>Logout</h4></a>
        }
    }

    

</body>
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
}


